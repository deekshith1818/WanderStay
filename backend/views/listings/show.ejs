<% layout('/layouts/boilerplate') -%>

<!-- Add Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin="" />

<style>
    :root {
        --primary-color: #FF385C;
        --primary-dark: #E31C5F;
        --text-primary: #222222;
        --text-secondary: #717171;
        --border-color: #DDDDDD;
        --background-light: #F7F7F7;
        --shadow-sm: 0 1px 2px rgba(0,0,0,0.08);
        --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
        --shadow-lg: 0 8px 24px rgba(0,0,0,0.12);
    }

    * {
        box-sizing: border-box;
    }

    body {
        background-color: #fff;
        color: var(--text-primary);
        line-height: 1.6;
    }

    /* Page Header */
    .listing-header {
        max-width: 1280px;
        margin: 0 auto;
        padding: 1.5rem 2rem;
    }

    .listing-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .listing-location {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .listing-location i {
        color: var(--primary-color);
    }

    /* Main Content Container */
    .listing-container {
        max-width: 1280px;
        margin: 0 auto;
        padding: 0 2rem 3rem;
    }

    /* Image Gallery */
    .image-gallery {
        width: 100%;
        height: 500px;
        border-radius: 16px;
        overflow: hidden;
        margin-bottom: 2.5rem;
        box-shadow: var(--shadow-md);
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .image-gallery:hover {
        transform: scale(1.01);
    }

    .image-gallery img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .image-gallery:hover img {
        transform: scale(1.05);
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    /* Main Content Card */
    .main-content {
        order: 1;
    }

    .info-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
        transition: box-shadow 0.3s ease;
    }

    .info-card:hover {
        box-shadow: var(--shadow-md);
    }

    .info-card h5 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .info-card p {
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: 1rem;
    }

    .info-highlight {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-color);
    }

    .info-highlight:last-child {
        border-bottom: none;
    }

    .info-highlight strong {
        color: var(--text-primary);
        font-weight: 600;
        min-width: 100px;
    }

    .info-highlight span {
        color: var(--text-secondary);
    }

    /* Sidebar - Booking & Map */
    .sidebar {
        order: 2;
        position: sticky;
        top: 2rem;
        height: fit-content;
    }

    .booking-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        border: 1px solid var(--border-color);
        box-shadow: var(--shadow-lg);
        margin-bottom: 1.5rem;
    }

    .price-section {
        text-align: center;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    .price-amount {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    .price-label {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .host-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: var(--background-light);
        border-radius: 12px;
    }

    .host-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 1.2rem;
    }

    .host-details h6 {
        margin: 0;
        font-weight: 600;
        color: var(--text-primary);
    }

    .host-details p {
        margin: 0;
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    /* Map Card */
    .map-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        box-shadow: var(--shadow-md);
    }

    .map-card h5 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    #map {
        height: 300px;
        width: 100%;
        border-radius: 12px;
        margin-bottom: 1rem;
        z-index: 1;
    }

    .map-location {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .btn-custom {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
    }

    .btn-edit {
        background: white;
        color: var(--text-primary);
        border: 2px solid var(--text-primary);
    }

    .btn-edit:hover {
        background: var(--text-primary);
        color: white;
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-delete {
        background: var(--primary-color);
        color: white;
    }

    .btn-delete:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    /* Reviews Section */
    .reviews-section {
        max-width: 1280px;
        margin: 3rem auto 0;
        padding: 0 2rem;
    }

    .reviews-header {
        margin-bottom: 2rem;
    }

    .reviews-header h4 {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .divider {
        height: 1px;
        background: var(--border-color);
        margin: 2rem 0;
    }

    /* Review Form */
    .review-form-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        border: 1px solid var(--border-color);
        box-shadow: var(--shadow-sm);
        margin-bottom: 2rem;
    }

    .review-form-card h4 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        font-family: inherit;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--text-primary);
        box-shadow: 0 0 0 3px rgba(34, 34, 34, 0.1);
    }

    .btn-submit {
        background: var(--primary-color);
        color: white;
        padding: 0.875rem 2rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .btn-submit:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    /* Star Rating */
    .starability-slot {
        margin-bottom: 1rem;
    }

    .starability-slot legend {
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: var(--text-primary);
    }

    /* Reviews Grid */
    .reviews-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .review-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        animation: fadeIn 0.5s ease;
    }

    .review-card:hover {
        box-shadow: var(--shadow-md);
        transform: translateY(-4px);
    }

    .review-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .reviewer-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 1rem;
    }

    .reviewer-name {
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
    }

    .review-comment {
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .review-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
    }

    .btn-delete-review {
        background: transparent;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-delete-review:hover {
        background: var(--primary-color);
        color: white;
    }

    /* Animations */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .content-grid {
            grid-template-columns: 1fr;
        }

        .sidebar {
            position: static;
            order: 1;
        }

        .main-content {
            order: 2;
        }

        .listing-header,
        .listing-container,
        .reviews-section {
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }
    }

    @media (max-width: 768px) {
        .listing-title {
            font-size: 1.5rem;
        }

        .image-gallery {
            height: 350px;
            border-radius: 12px;
        }

        .info-card,
        .booking-card,
        .map-card,
        .review-form-card {
            padding: 1.5rem;
            border-radius: 12px;
        }

        .content-grid {
            gap: 2rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-custom {
            width: 100%;
            justify-content: center;
        }

        .reviews-grid {
            grid-template-columns: 1fr;
        }

        .listing-header,
        .listing-container,
        .reviews-section {
            padding-left: 1rem;
            padding-right: 1rem;
        }
    }

    @media (max-width: 480px) {
        .listing-title {
            font-size: 1.25rem;
        }

        .image-gallery {
            height: 280px;
        }

        .price-amount {
            font-size: 1.75rem;
        }

        .info-card h5 {
            font-size: 1.25rem;
        }
    }
</style>

<!-- Page Header -->
<div class="listing-header">
    <h1 class="listing-title"><%=listing.title%></h1>
    <div class="listing-location">
        <i class="fas fa-map-marker-alt"></i>
        <span><%=listing.location%>, <%=listing.country%></span>
    </div>
</div>

<!-- Image Gallery -->
<div class="listing-container">
    <div class="image-gallery">
        <img src="<%=listing.image.url%>" alt="<%=listing.title%>">
    </div>

    <!-- Content Grid -->
    <div class="content-grid">
        <!-- Sidebar - Booking & Map -->
        <div class="sidebar">
            <div class="booking-card">
                <div class="price-section">
                    <div class="price-amount">₹<%=listing.price.toLocaleString("en-IN")%></div>
                    <div class="price-label">per night</div>
                </div>
                
                <div class="host-info">
                    <div class="host-avatar">
                        <%=listing.owner.username.charAt(0).toUpperCase()%>
                    </div>
                    <div class="host-details">
                        <h6>Hosted by <%=listing.owner.username%></h6>
                        <p>Superhost</p>
                    </div>
                </div>
            </div>

            <div class="map-card">
                <h5>Where you'll be</h5>
                <div id="map"></div>
                <div class="map-location">
                    <i class="fas fa-map-marker-alt"></i>
                    <span><%=listing.location%>, <%=listing.country%></span>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="info-card">
                <h5>About this place</h5>
                <p><%=listing.description%></p>
                
                <div class="info-highlight">
                    <strong>Price:</strong>
                    <span>₹<%=listing.price.toLocaleString("en-IN")%> per night</span>
                </div>
                
                <div class="info-highlight">
                    <strong>Location:</strong>
                    <span><%=listing.location%>, <%=listing.country%></span>
                </div>
            </div>

            <%if(currUser&&listing.owner._id.equals(currUser._id)){%>
            <div class="action-buttons">
                <a href="/listings/<%=listing._id%>/edit" class="btn-custom btn-edit">
                    <i class="fas fa-edit"></i> Edit Listing
                </a>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" style="margin: 0;">
                    <button class="btn-custom btn-delete">
                        <i class="fas fa-trash"></i> Delete Listing
                    </button>
                </form>
            </div>
            <%}%>
        </div>
    </div>
</div>

<!-- Reviews Section -->
<div class="reviews-section">
    <div class="divider"></div>

    <%if(currUser){%>
    <div class="review-form-card">
        <h4>Leave a review</h4>
        <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
            <div class="form-group">
                <fieldset class="starability-slot">
                    <legend>Rating</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>

            <div class="form-group">
                <label for="comment" class="form-label">Your Review</label>
                <textarea name="review[comment]" id="comment" rows="5" class="form-control" 
                    placeholder="Share your experience..." required></textarea>
                <div class="invalid-feedback">
                    Please add valid comments for your review
                </div>
            </div>

            <button type="submit" class="btn-submit">Submit Review</button>
        </form>
    </div>
    <%}%>

    <%if(listing.reviews.length>0){%>
    <div class="reviews-header">
        <h4>Reviews (<%=listing.reviews.length%>)</h4>
    </div>

    <div class="reviews-grid">
        <%for(review of listing.reviews){%>
        <div class="review-card">
            <div class="review-header">
                <div class="reviewer-avatar">
                    <%=review.author.username.charAt(0).toUpperCase()%>
                </div>
                <div>
                    <h6 class="reviewer-name">@<%=review.author.username%></h6>
                </div>
            </div>

            <p class="review-comment"><%=review.comment%></p>

            <div class="review-footer">
                <p class="starability-result" data-rating="<%=review.rating%>"></p>
                <form method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" style="margin: 0;">
                    <button class="btn-delete-review">Delete</button>
                </form>
            </div>
        </div>
        <%}%>
    </div>
    <%}%>
</div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get coordinates from EJS template
        const lng = <%- JSON.stringify(listing.geometry.coordinates[0]) %>;
        const lat = <%- JSON.stringify(listing.geometry.coordinates[1]) %>;
        
        // Initialize map
        const map = L.map('map').setView([lat, lng], 13);
        
        // Add OpenStreetMap tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
            maxZoom: 19
        }).addTo(map);
        
        // Add custom marker icon
        const customIcon = L.divIcon({
            className: 'custom-marker',
            html: '<div style="background: #FF385C; width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.2);"><i class="fas fa-home"></i></div>',
            iconSize: [32, 32],
            iconAnchor: [16, 16]
        });
        
        // Add marker with popup
        const marker = L.marker([lat, lng], {icon: customIcon}).addTo(map);
        marker.bindPopup(`<div style="text-align: center;"><b><%= listing.title %></b><br><%= listing.location %>, <%= listing.country %></div>`);
        
        // Add a circle for better visibility
        L.circle([lat, lng], {
            color: '#FF385C',
            fillColor: '#FF385C',
            fillOpacity: 0.15,
            radius: 500
        }).addTo(map);

        // Smooth scroll to reviews
        const reviewLinks = document.querySelectorAll('a[href="#reviews"]');
        reviewLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                document.querySelector('.reviews-section').scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    });
</script>