<% layout('/layouts/boilerplate') -%>

<!-- Ensure Font Awesome is loaded in your layout -->
<!-- Add this in /layouts/boilerplate.ejs if not already included -->
<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"> -->

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 border-0 rounded-4" style="width: 100%; max-width: 420px;">
        <h2 class="text-center mb-4 text-success fw-bold">Log In to <span class="text-danger">WanderLust</span></h2>

        <form action="/login" method="POST" class="needs-validation" novalidate>
            <!-- Username Field with Icon -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                    <input 
                        type="text" 
                        name="username" 
                        id="username" 
                        class="form-control" 
                        placeholder="Enter username"
                        required 
                    />
                    <div class="invalid-feedback">Please enter your username.</div>
                </div>
            </div>

            <!-- Password Field with Icon -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-control" 
                        placeholder="Enter password"
                        required 
                    />
                    <div class="invalid-feedback">Please enter your password.</div>
                </div>
            </div>

            <button class="btn btn-success btn-lg w-100 mt-3 shadow-sm">Login</button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">Don't have an account? <a href="/signup" class="text-decoration-none text-primary">Register here</a></p>
        </div>
    </div>
</div>
